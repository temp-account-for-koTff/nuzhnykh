<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.GifViewerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner_rectangle">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gif_viewer_fragment.main_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/gif_viewer_fragment.gif_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/gif_viewer_padding"
                android:background="@drawable/rounded_corner_rectangle"/>
            <TextView
                android:id="@+id/gif_viewer_fragment.description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fragment_gif_view.text_size"
                android:background="@drawable/gradient_bg"
                android:textColor="@color/description_text_color"
                android:padding="@dimen/description_text_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gif_viewer_fragment.error_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <TextView
                android:id="@+id/gif_viewer_fragment.error_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gif_viewer_fragment.error_text"
                android:textSize="@dimen/fragment_gif_view.text_size"
                android:padding="@dimen/error_text_padding"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/gif_viewer_fragment.reload_btn"/>
            <Button
                android:id="@+id/gif_viewer_fragment.reload_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gif_viewer_fragment.reload_btn.text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gif_viewer_fragment.error_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ProgressBar
            android:id="@+id/gif_viewer_fragment.loading_pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/gif_viewer_fragment.prev_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gif_viewer_fragment.next_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/RoundedButton"
            android:src="@drawable/ic_baseline_rotate_left_48"
            app:tint="@color/prev_btn_fg_state_list"/>
        <ImageButton
            android:id="@+id/gif_viewer_fragment.next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gif_viewer_fragment.prev_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/RoundedButton"
            android:src="@drawable/ic_baseline_arrow_forward_48"
            app:tint="@color/green"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>